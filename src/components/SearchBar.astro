<div class="relative w-full max-w-lg min-w-72 mx-auto">
  <form id="search-form" action="/search">
    <input
      type="text"
      name="q"
      placeholder="Search..."
      class="w-full py-2 px-4 pr-8 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondary transition duration-300 ease-in-out"
    />
