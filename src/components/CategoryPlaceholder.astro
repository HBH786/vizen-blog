---
export interface Props {
  category: string;
}

const { category } = Astro.props;
---

<div class="max-w-3xl mx-auto text-center">
  <h1 class="text-4xl font-heading font-bold mb-6">{category}</h1>
  <p class="text-xl mb-8">We're currently working on curating content for this category. Check back soon for a list of articles about {category.toLowerCase()}!</p>
  <img src="/images/work-in-progress.svg" alt="Work in Progress" class="w-64 mx-auto mb-8">
  <a href="/categories" class="inline-block bg-secondary text-white py-2 px-6 rounded-lg hover:bg-tertiary transition-colors duration-300">
    Back to Categories
  </a>
</div>